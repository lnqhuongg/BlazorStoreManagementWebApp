@page "/"
@using Components.Layout.Client;
@layout MainLayout

<div class="header-bottom">
    <!--header-bottom-->
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <div class="navbar-header">
                </div>
                <div class="mainmenu pull-left">
                    <ul class="nav navbar-nav collapse navbar-collapse">
                        <li><a class="active" style="cursor:pointer" href="/">Trang chủ</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-3" style="display: flex; justify-content: space-between; gap: 1rem;">
                <input type="text"
                       class="form-control"
                       placeholder="Tên sản phẩm"
                       @bind="Keyword" />

                <button class="btn btn-warning" @onclick="ApplyFilter">
                    Tìm kiếm
                </button>

            </div>
        </div>
    </div>
</div><!--/header-bottom-->

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2 style="padding: 3px 0px;">Loại sản phẩm</h2>
                    <div class="panel-group category-products" id="accordian">
                        @foreach (var ct in categoryList)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading
                                    @(SelectedCategoryId == ct.CategoryId ? "active-category" : "")"
                                     @onclick="() => OnCategoryClick(ct.CategoryId)">

                                    <h4 class="panel-title">
                                        <a style="cursor:pointer">
                                            @ct.CategoryName
                                        </a>
                                    </h4>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="container" style="margin-bottom: 20px; width:100%">
                    <!--filter-->
                    <div class="row" style="display: flex; align-items: end;">
                        <div class="col-md-2">
                            <h5>Sắp xếp theo:</h5>
                            <select class="form-control" @bind="Order">
                                <option value="">-----------</option>
                                <option value="asc">Giá tăng dần</option>
                                <option value="desc">Giá giảm dần</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <h5>Giá tối thiểu:</h5>
                            <input type="number"
                                   class="form-control"
                                   min="0"
                                   placeholder="Min (VND)"
                                   @bind="MinPrice" />
                        </div>

                        <div class="col-md-3">
                            <h5>Giá tối đa:</h5>
                            <input type="number"
                                   class="form-control"
                                   min="0"
                                   placeholder="Max (VND)"
                                   @bind="MaxPrice" />
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-success" @onclick="ApplyFilter">
                                Lọc
                            </button>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-danger" @onclick="ResetFilter">
                                Xóa bộ lọc
                            </button>
                        </div>
                    </div>

                </div><!--filter-->

                <div class="features_items">
                    <h2 class="title text-center" style="padding: 3px 0px;">Sản phẩm tại cửa hàng</h2>

                    @if (SanPhamData?.Data != null && SanPhamData.Data.Count != 0)
                    {
                        @foreach (var sp in SanPhamData.Data)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a>
                                                <img src="@sp.ImageUrl" width="185" height="235" />
                                                <h2 class="product-name">@sp.ProductName</h2>
                                                <p>@sp.Price.ToString("N0") VND</p>
                                            </a>
                                            <button class="btn btn-default add-to-cart add-to-cart-primary">
                                                <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    } else
                    { 
                        if (SanPhamData?.Data.Count == 0) {
                            <h3 class="text-center text-muted">Không có sản phẩm.</h3>
                        }
                    }
                </div>

            </div>
        </div>
    </div>
</section>

@if (SanPhamData?.Data != null && SanPhamData.Total > PageSize)
{
    <PaginationClient Total="SanPhamData.Total"
                      Page="@Page"
                      PageChanged="ChangePage"
                      PageSize="@PageSize" />
}


