@attribute [StreamRendering]
@rendermode InteractiveServer
@page "/admin/sanpham"

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-box"></i>
        Quản lý Sản phẩm
    </h2>
</div>

<!-- ACTION BAR -->
<div class="action-bar">
    <button class="btn-add" data-bs-toggle="modal" data-bs-target="#addProductModal">
        <i class="fas fa-plus"></i>
        Thêm mới
    </button>
    <div class="search-group w-100">
        <input type="text" placeholder="Tìm kiếm..." class="form-control">
        <button class="btn-search">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>
</div>

<!-- TABLE -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Barcode</th>
                <th class="text-center">Loại SP</th>
                <th class="text-center">Nhà cung cấp</th>
                <th class="text-center">Giá</th>
                <th class="text-center">Đơn vị</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#001</td>
                <td>Nước khoáng Lavie</td>
                <td>8934588123456</td>
                <td class="text-center">Chai nước</td>
                <td class="text-center">Công ty Lavie</td>
                <td class="text-center">15,000₫</td>
                <td class="text-center">Chai</td>
                <td class="text-center"><span class="status-badge status-active">Hoạt động</span></td>
                <td class="text-center">
                    <button class="btn-action btn-edit">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn-action btn-delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<PaginationAdmin />

<SanPhamForm />

