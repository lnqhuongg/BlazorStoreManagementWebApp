@page "/admin/khachhang"
@using Components.Layout.Admin;
@layout MainLayout

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-users"></i>
        Quản lý Khách hàng
    </h2>
</div>

<!-- ACTION BAR -->
<div class="action-bar">
    <button class="btn-add" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
        <i class="fas fa-plus"></i>
        Thêm mới
    </button>
    <div class="search-group w-100">
        <input type="text" placeholder="Tìm kiếm..." class="form-control">
        <button class="btn-search">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>
</div>

<!-- TABLE -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Mã KH</th>
                <th>Tên khách hàng</th>
                <th class="text-center">Số điện thoại</th>
                <th class="text-center">Email</th>
                <th class="text-center">Địa chỉ</th>
                <th class="text-center">Điểm thưởng</th>
                <th class="text-center">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#001</td>
                <td>Nguyễn Văn A</td>
                <td class="text-center">0901234567</td>
                <td class="text-center">nguyenvana@email.com</td>
                <td class="text-center">123 Đường ABC, Quận 1</td>
                <td class="text-center">150</td>
                <td class="text-center">
                    <button class="btn-action btn-edit">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn-action btn-delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
