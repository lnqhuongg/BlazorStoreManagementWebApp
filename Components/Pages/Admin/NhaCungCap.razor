@page "/admin/nhacungcap"
@using BlazorStoreManagementWebApp.Components.Forms.Admin
@using BlazorStoreManagementWebApp.DTOs.Admin.NhaCungCap
@attribute [StreamRendering]
@rendermode InteractiveServer
@using Components.Layout.Admin;
@layout MainLayout

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-truck-moving"></i>
        Quản lý Nhà cung cấp
    </h2>
</div>

<!-- ACTION BAR -->
<div class="action-bar">
    <button class="btn-add" @onclick="() => NhaCungCapFormRef?.OpenCreate()">
        <i class="fas fa-plus"></i>
        Thêm mới
    </button>

    <div class="search-group w-100">
        <input @bind="Keyword" type="text" placeholder="Tìm kiếm..." class="form-control">
        <button class="btn-search" @onclick="Search">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>
</div>

<!-- TABLE -->
<div class="table-wrapper">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th style="width:5%;">ID</th>
                <th style="width:15%;">Tên nhà cung cấp</th>
                <th style="width:10%;">SĐT</th>
                <th style="width:15%;">Email</th>
                <th style="width:35%;">Địa chỉ</th>
                <th style="width:10%;">Trạng thái</th>
                <th style="width:10%;" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (SupplierData?.Data == null || !SupplierData.Data.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        Không có dữ liệu nhà cung cấp.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in SupplierData.Data)
                {
                    <tr>
                        <td>@item.SupplierId</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>
                            @(item.Status == 1 ? "Hoạt động" : "Ngừng hợp tác")
                        </td>
                        <td class="text-center">
                            <button class="btn-action btn-edit"
                                    @onclick="() => NhaCungCapFormRef?.OpenUpdate(item)">
                                <i class="fas fa-edit"></i>
                            </button>
                            @* Nút xóa nhà cung cấp 
                            <button class="btn-action btn-delete">

                                <i class="fas fa-trash"></i>
                            </button>
                            *@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (SupplierData?.Data != null && SupplierData.Data.Any())
{
    <PaginationAdmin Total="SupplierData.Total"
                     Page="@Page"
                     PageChanged="ChangePage"
                     PageSize="@PageSize" />
}

<NhaCungCapForm @ref="NhaCungCapFormRef" OnSuccess="LoadData" />

