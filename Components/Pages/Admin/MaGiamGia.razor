@attribute [StreamRendering]
@rendermode InteractiveServer
@page "/admin/magiamgia"
@using Components.Layout.Admin;
@using BlazorStoreManagementWebApp.Components.Forms.Admin
@layout MainLayout

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-ticket-alt"></i>
        Quản lý Mã giảm giá
    </h2>
</div>

<!-- ACTION BAR -->
<div class="action-bar">
    <button class="btn-add" @onclick="() => MaGiamGiaFormRef.OpenCreate()">
        <i class="fas fa-plus"></i>
        Thêm mới
    </button>

    <div class="search-group w-100">
        <input @bind="Keyword" 
               @bind:event="oninput" 
               @onkeydown="OnSearchKeyDown"
               type="text" 
               placeholder="Tìm kiếm mã hoặc mô tả..." 
               class="form-control" />
        <button class="btn-search" @onclick="Search">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>

    <select @bind="DiscountType" 
            @bind:event="oninput" 
            @onchange="FilterChanged"
            class="form-control ms-2" 
            style="width: auto;">
        <option value="">-- Tất cả loại giảm --</option>
        <option value="percent">Phần trăm</option>
        <option value="fixed">Số tiền</option>
    </select>
</div>

<!-- TABLE -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Mô tả</th>
                <th>Loại giảm</th>
                <th>Giá trị</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Giới hạn</th>
                <th>Đã dùng</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            @if (PromoData?.Data == null || !PromoData.Data.Any())
            {
                <tr>
                    <td colspan="10" class="text-center text-muted py-4">
                        <i class="fas fa-box-open fa-2x mb-2"></i><br />
                        Không có dữ liệu
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in PromoData.Data)
                {
                    <tr>
                        <td>@item.PromoCode</td>
                        <td>@item.Description</td>
                        <td>@(item.DiscountType == "percent" ? "Phần trăm" : "Số tiền")</td>
                        <td>@item.DiscountValue</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.UsageLimit</td>
                        <td>@item.UsedCount</td>
                        <td class="text-center">
                            <span class="status-badge @(item.Status == "active" ? "status-active" : "status-inactive")">
                                @(item.Status == "active" ? "Hoạt động" : "Tạm ngưng")
                            </span>
                        </td>
                        <td class="text-center">
                            <button class="btn-action btn-edit"
                                    @onclick="() => MaGiamGiaFormRef.OpenUpdate(item)">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (PromoData?.Data != null && PromoData.Data.Any())
{
    <PaginationAdmin Total="PromoData.Total"
                     Page="@Page"
                     PageChanged="ChangePage"
                     PageSize="@PageSize" />
}

<MaGiamGiaForm @ref="MaGiamGiaFormRef" OnSuccess="LoadData" />