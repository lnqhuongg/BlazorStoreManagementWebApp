@attribute [StreamRendering]
@rendermode InteractiveServer
@page "/admin/magiamgia"
@using Components.Layout.Admin
@layout MainLayout

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-ticket-alt"></i>
        Quản lý Mã giảm giá
    </h2>
</div>

<!-- ACTION BAR -->
<!-- ACTION BAR -->
<div class="action-bar">
    <!-- Thêm mới -->
    <button class="btn-add" @onclick="() => MaGiamGiaFormRef.OpenCreate()">
        <i class="fas fa-plus"></i>
        Thêm mới
    </button>

    <!-- Search -->
    <div class="search-group w-100">
        <input @bind="Keyword"
               @onkeydown="OnSearchKeyDown"
               type="text"
               placeholder="Tìm kiếm mã giảm giá..."
               class="form-control">

        <button class="btn-search" @onclick="Search">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>

    <!-- Filter loại giảm -->
    <select @bind="DiscountType"
            @bind:event="oninput"
            @onchange="FilterChanged"
            class="form-control ms-2"
            style="width: auto;">
        <option value="">-- Tất cả loại --</option>
        <option value="percent">Phần trăm</option>
        <option value="fixed">Giảm giá</option>
    </select>
</div>



<!-- TABLE -->
<div class="table-container">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Mô tả</th>
                <th class="text-center">Loại</th>
                <th class="text-end">Giá trị</th>
                <th class="text-center">Bắt đầu</th>
                <th class="text-center">Kết thúc</th>
                <th class="text-end">Đơn tối thiểu</th>
                <th class="text-center">Giới hạn</th>
                <th class="text-center">Đã dùng</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Tùy chỉnh</th>
            </tr>
        </thead>

        <tbody>
            @if (PromoData?.Data == null || !PromoData.Data.Any())
            {
                <tr>
                    <td colspan="11" class="text-center text-muted py-4">
                        <i class="fas fa-ticket-alt fa-2x mb-2"></i><br />
                        Không có dữ liệu
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in PromoData.Data)
                {
                    <tr @key="item.PromoId">
                        <td><strong>@item.PromoCode</strong></td>
                        <td>@item.Description</td>

                        <td class="text-center">
                            @(item.DiscountType == "percent" ? "Phần trăm" : "Giảm giá")
                        </td>

                        <td class="text-end">
                            @if (item.DiscountType == "percent")
                            {
                                @($"{item.DiscountValue}%")
                            }
                            else
                            {
                                @item.DiscountValue.ToString("N0")
                            }
                        </td>

                        <td class="text-center">
                            @item.StartDate.ToString("dd/MM/yyyy")
                        </td>

                        <td class="text-center">
                            @item.EndDate.ToString("dd/MM/yyyy")
                        </td>

                        <td class="text-end">
                            @item.MinOrderAmount.ToString("N0")
                        </td>

                        <td class="text-center">
                            @item.UsageLimit
                        </td>

                        <td class="text-center">
                            @item.UsedCount
                        </td>

                        <td class="text-center">
                            <span class="badge @(item.Status == "active" ? "bg-success" : "bg-secondary")">
                                @(item.Status == "active" ? "Hoạt động" : "Tạm ngưng")
                            </span>
                        </td>

                        <td class="text-center">
                            <button class="btn-action btn-edit"
                                    @onclick="() => MaGiamGiaFormRef.OpenUpdate(item)">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@if (PromoData?.Data != null && PromoData.Data.Any())
{
    <PaginationAdmin Total="PromoData.Total"
                     Page="@Page"
                     PageChanged="ChangePage"
                     PageSize="@PageSize" />
}

<MaGiamGiaForm @ref="MaGiamGiaFormRef" OnSuccess="LoadData" />
