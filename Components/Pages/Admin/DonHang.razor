@page "/admin/donhang"
@using BlazorStoreManagementWebApp.DTOs.Admin.DonHang
@using BlazorStoreManagementWebApp.Components.Forms.Admin
@* Import namespace chứa PaginationAdmin *@
@using BlazorStoreManagementWebApp.Components.UI.Pagination

@rendermode InteractiveServer
@using Components.Layout.Admin;
@layout MainLayout

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-white border-0 py-3">
        <h3 class="mb-0 text-primary fw-bold">
            <i class="fas fa-shopping-cart me-2"></i>Quản lý Đơn hàng
        </h3>
    </div>

    <div class="card-body">
        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control"
                           placeholder="Nhập mã đơn hoặc tên khách..."
                           @bind="Keyword" />
                    <button class="btn btn-primary" @onclick="HandleSearch">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>

            <div class="col-md-3">
                <select class="form-select" @onchange="HandleStatusFilter">
                    <option value="">-- Tất cả trạng thái --</option>
                    <option value="Pending">Chờ thanh toán (Pending)</option>
                    <option value="Completed">Đã thanh toán (Completed)</option>
                </select>
            </div>

            <div class="col-md-5 text-end align-self-center">
                <span class="text-muted fst-italic">Tổng cộng: <b>@TotalItems</b> đơn hàng</span>
            </div>
        </div>

        <div class="table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#ID</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (DonHangs != null && DonHangs.Any())
                    {
                        @foreach (var item in DonHangs)
                        {
                            <tr>
                                <td class="text-center fw-bold">@item.OrderId</td>
                                <td>
                                    <div class="fw-semibold">@item.CustomerName</div>
                                    <small class="text-muted">@item.Phone</small>
                                </td>
                                <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-success fw-bold">
                                    @string.Format("{0:N0} đ", item.TotalAmount)
                                </td>
                                <td class="text-center">
                                    @if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Đã thanh toán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Chờ thanh toán</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary"
                                            @onclick="() => OpenModal(item.OrderId)"
                                            data-bs-toggle="modal"
                                            data-bs-target="#orderDetailModal">
                                        <i class="fas fa-eye"></i> Xem
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open fs-1 d-block mb-2"></i>
                                Không tìm thấy dữ liệu nào phù hợp.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (TotalItems > 0)
        {
            <PaginationAdmin Total="TotalItems"
                             Page="CurrentPage"
                             PageSize="PageSize"
                             PageChanged="ChangePage" />
        }
    </div>
</div>

<ChiTietDonHangForm @ref="donHangForm" OnSaved="LoadData" />