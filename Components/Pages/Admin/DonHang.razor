@page "/admin/donhang"
@using BlazorStoreManagementWebApp.DTOs.Admin.DonHang
@using BlazorStoreManagementWebApp.Components.Forms.Admin
@using BlazorStoreManagementWebApp.Components.UI.Pagination

@attribute [StreamRendering]
@rendermode InteractiveServer
@using Components.Layout.Admin;
@layout MainLayout

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-shopping-cart"></i>
        Quản lý Đơn hàng
    </h2>
</div>

<!-- ACTION BAR -->
<div class="action-bar">
    <div class="search-group w-100">
        <input type="text" 
               @bind="Keyword" 
               placeholder="Nhập mã đơn hoặc tên khách..." 
               class="form-control">
        <button class="btn-search" @onclick="HandleSearch">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>

    <select class="form-control ms-2" style="width: auto;" @onchange="HandleStatusFilter">
        <option value="">-- Tất cả trạng thái --</option>
        <option value="pending">Chờ thanh toán </option>
        <option value="paid">Đã thanh toán </option>
        <option value="canceled">Đã hủy </option>
    </select>
</div>

<!-- TABLE -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">#ID</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            @if (DonHangs != null && DonHangs.Any())
            {
                @foreach (var item in DonHangs)
                {
                    <tr>
                        <td class="text-center fw-bold">@item.OrderId</td>
                        <td>
                            <div class="fw-semibold">@item.CustomerName</div>
                            <small class="text-muted">@item.Phone</small>
                        </td>
                        <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-success fw-bold">
                            @string.Format("{0:N0} đ", item.TotalAmount)
                        </td>
                        <td class="text-center">
                            <span class="status-badge 
                                @(item.Status == "paid" ? "status-active" : 
                                item.Status == "canceled" ? "status-inactive" : "status-pending")">
                                @(item.Status == "paid" ? "Đã thanh toán" : 
                                item.Status == "canceled" ? "Đã hủy" : "Chờ thanh toán")
                            </span>
                        </td>
                        <td class="text-center">
                            <button class="btn-action btn-edit"
                                    @onclick="() => OpenModal(item.OrderId)">
                                <i class="fas fa-eye"></i>
                            </button>
                            
                        <!-- PRINT PDF -->
                        <button class="btn-action btn-pdf"
                                @onclick="() => PreviewPdf(item)">
                            <i class="fas fa-file-pdf"></i>
                        </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        <i class="fas fa-box-open fa-2x mb-2"></i><br />
                        Không có dữ liệu
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (TotalItems > 0)
{
    <PaginationAdmin Total="TotalItems"
                     Page="CurrentPage"
                     PageSize="PageSize"
                     PageChanged="ChangePage" />
}

<ChiTietDonHangForm @ref="donHangForm" OnSaved="LoadData" />

