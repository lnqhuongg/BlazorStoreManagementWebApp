@attribute [StreamRendering]
@rendermode InteractiveServer
@page "/admin/nhanvien"
@using Components.Layout.Admin;
@using BlazorStoreManagementWebApp.Components.Forms.Admin;
@layout MainLayout

<!-- HEADER -->
<div class="content-header">
    <h2>
        <i class="fas fa-users"></i>
        Quản lý Nhân viên
    </h2>
</div>

<!-- ACTION BAR -->
<div class="action-bar">
    <button class="btn-add" @onclick="() => NhanVienFormRef.OpenCreate()">
        <i class="fas fa-plus"></i>
        Thêm mới
    </button>

    <div class="search-group w-100">
        <input @bind="Filter.Keyword" type="text" placeholder="Tìm kiếm nhân viên..." class="form-control">
        <button class="btn-search" @onclick="Search">
            <i class="fas fa-search"></i>
            Tìm kiếm
        </button>
    </div>

    <select @bind="Filter.Role" class="form-control ms-2" style="width: auto;">
        <option value="">-- Tất cả chức vụ --</option>
        <option value="admin">Quản trị viên</option>
        <option value="staff">Nhân viên</option>
    </select>
</div>

<!-- TABLE -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Mã NV</th>
                <th>Họ tên</th>
                <th class="text-center">Tên đăng nhập</th>
                <th class="text-center">Chức vụ</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Ngày tạo</th>
                <th class="text-center">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            @if (NhanVienData?.Data == null || !NhanVienData.Data.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        <i class="fas fa-box-open fa-2x mb-2"></i><br />
                        Không có dữ liệu
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in NhanVienData.Data)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.FullName</td>
                        <td class="text-center">@item.Username</td>
                        <td class="text-center">@(item.Role == "admin" ? "Quản trị viên" : "Nhân viên")</td>
                        <td class="text-center">
                            <span class="status-badge @(item.Status == 1 ? "status-active" : "status-inactive")">
                                @(item.Status == 1 ? "Hoạt động" : "Tạm ngưng")
                            </span>
                        </td>
                        <td class="text-center">@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <button class="btn-action btn-edit" @onclick="() => NhanVienFormRef.OpenUpdate(item)">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (NhanVienData?.Data != null && NhanVienData.Data.Any())
{
    <PaginationAdmin Total="NhanVienData.Total"
                     Page="@Page"
                     PageChanged="ChangePage"
                     PageSize="@PageSize" />
}

<NhanVienForm @ref="NhanVienFormRef" OnSuccess="LoadData" />