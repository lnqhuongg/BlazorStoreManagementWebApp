<div class="modal fade" id="CategoryModal" tabindex="-1" aria-labelledby="CategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
            <EditForm Model="@categoryDTO" OnValidSubmit="@HandleSubmit">
                <!-- Header -->
                <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none;">
                    <h1 class="modal-title fs-5" style="color: white; font-weight: 700;">
                        <i class="fas fa-@(IsEditMode ? "edit" : "plus-circle")" style="margin-right: 0.5rem;"></i>
                            
                    </h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <!-- Modal Body -->
                <div class="modal-body" style="padding: 2rem;">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label" style="font-weight: 600; color: #065f46; margin-bottom: 0.75rem;">
                            Tên loại sản phẩm <span style="color: #ef4444;">*</span>
                        </label>
                        <InputText @bind-Value="categoryDTO.CategoryName"
                                    class="form-control"
                                    placeholder="Nhập tên loại sản phẩm..."
                                    style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                        @if (!string.IsNullOrEmpty(NameErrorMessage))
                        {
                            <span class="text-danger" style="font-size: 13px; font-weight: 500;">
                                <i class="fas fa-exclamation-triangle" style="margin-right: 4px;"></i>
                                @NameErrorMessage
                            </span>
                        }
                    </div>

                    @* phần này là phần kiểu như có một số trường chỉ bên chỉnh sửa mới có, thêm mới thì không có  *@

                    @* @if (IsEditMode)
                    {
                        <div class="mb-3">
                            <label class="form-label" style="font-weight: 600; color: #065f46;">
                                Trạng thái <span style="color: #ef4444;">*</span>
                            </label>
                            <InputSelect @bind-Value="categoryDto.IsActive" class="form-select"
                                         style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;">
                                <option value="">-- Chọn trạng thái --</option>
                                <option value="true">Hoạt động</option>
                                <option value="false">Tạm ngưng</option>
                            </InputSelect>
                        </div>
                    } *@
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer" style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">
                    <button type="button" class="btn" data-bs-dismiss="modal" style="background-color: #e5e7eb; color: #374151; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-add" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        <i class="fas fa-check"></i>
                        @(IsEditMode ? "Cập nhật" : "Thêm mới")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
