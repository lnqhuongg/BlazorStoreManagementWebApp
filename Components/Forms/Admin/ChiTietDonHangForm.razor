<div class="modal fade" id="ChiTietDonHangModal" tabindex="-1" aria-labelledby="chiTietDonHangLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">

            <!-- Header -->
            <div class="modal-header" 
                 style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none; border-radius: 12px 12px 0 0;">
                <h1 class="modal-title fs-5" style="color: white; font-weight: 700;">
                    <i class="fas fa-shopping-cart" style="margin-right: 0.5rem;"></i>
                    Chi Tiết Đơn Hàng #@donHang.OrderId
                </h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2rem;">

                <!-- THÔNG TIN ĐƠN HÀNG -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="mb-3" style="color: #065f46; font-weight: 700; text-transform: uppercase;">
                            THÔNG TIN ĐƠN HÀNG
                        </h6>

                        <div class="mb-3">
                            <strong>Khách hàng:</strong> 
                            @(string.IsNullOrEmpty(donHang.CustomerName) ? "Khách vãng lai" : donHang.CustomerName)
                        </div>
                        <div class="mb-3">
                            <strong>Số điện thoại:</strong> 
                            @(string.IsNullOrEmpty(donHang.Phone) ? "Không có" : donHang.Phone)
                        </div>
                        <div class="mb-3">
                            <strong>Ngày đặt:</strong> 
                            @donHang.OrderDate?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="mb-3">
                            <strong>Phương thức thanh toán:</strong> 
                            @DisplayPaymentMethods()
                        </div>
                    </div>

                    <div class="col-md-6 text-md-end">
                        <h6 class="mb-3" style="color: #065f46; font-weight: 700; text-transform: uppercase;">&nbsp;</h6>

                        <div class="mb-3">
                            <strong>Trạng thái:</strong>
                            <span class="badge @(donHang.Status == "Completed" ? "bg-success" : "bg-warning")"
                                  style="padding: 0.5rem 1rem; border-radius: 50px; font-size: 0.9rem;">
                                @(donHang.Status == "Completed" ? "Đã thanh toán" : "Chờ thanh toán")
                            </span>
                        </div>

                        <div class="mb-3">
                            <strong>Nhân viên:</strong> 
                            @(string.IsNullOrEmpty(donHang.UserName) ? "Không xác định" : donHang.UserName)
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- DANH SÁCH SẢN PHẨM -->
                <h6 class="mb-3" style="color: #065f46; font-weight: 700; text-transform: uppercase;">
                    DANH SÁCH SẢN PHẨM
                </h6>

                <div style="max-height: 400px; overflow-y: auto; border: 1px solid #e5e7eb; border-radius: 8px;">
                    <table class="table table-hover mb-0">
                        <thead class="table-light" style="position: sticky; top: 0; z-index: 5;">
                            <tr>
                                <th class="text-center">#</th>
                                <th>Tên sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (donHang.Items != null && donHang.Items.Any())
                            {
                                for (int i = 0; i < donHang.Items.Count; i++)
                                {
                                    var item = donHang.Items[i];
                                    <tr>
                                        <td class="text-center">@(i + 1)</td>
                                        <td>@item.Product?.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@string.Format("{0:N0} đ", item.Price)</td>
                                        <td class="text-end">@string.Format("{0:N0} đ", item.Subtotal)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        Không có sản phẩm
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer d-flex justify-content-between align-items-center"
                 style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">
                <div>
                    @if (donHang.Promotion != null && donHang.DiscountAmount > 0)
                    {
                        <div class="mb-2 text-end">
                            <strong>Mã giảm giá (@donHang.Promotion.PromoCode):</strong>
                            <span style="color: #ef4444; font-weight: 700;">
                                -@string.Format("{0:N0} đ", donHang.DiscountAmount)
                            </span>
                        </div>
                    }

                    <div class="text-end">
                        <strong style="font-size: 1.2rem; color: #065f46;">TỔNG CỘNG:</strong>
                        <span style="font-size: 1.4rem; color: #dc2626; font-weight: 700;">
                            @string.Format("{0:N0} đ", donHang.TotalAmount)
                        </span>
                    </div>
                </div>

                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                        style="padding: 0.75rem 2rem; border-radius: 8px; font-weight: 600;">
                    Đóng
                </button>
            </div>
        </div>
    </div>
</div>