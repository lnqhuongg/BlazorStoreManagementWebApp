<div class="modal fade" id="ChiTietDonHangModal" tabindex="-1" aria-labelledby="chiTietDonHangLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">

            <!-- Header -->
            <div class="modal-header" 
                 style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none; border-radius: 12px 12px 0 0;">
                <h1 class="modal-title fs-5" style="color: white; font-weight: 700;">
                    <i class="fas fa-shopping-cart" style="margin-right: 0.5rem;"></i>
                    Chi Tiết Đơn Hàng #@donHang.OrderId
                </h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2rem;">

                <!-- THÔNG TIN ĐƠN HÀNG -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="mb-3" style="color: #065f46; font-weight: 700; text-transform: uppercase;">
                            THÔNG TIN ĐƠN HÀNG
                        </h6>

                        <div class="mb-3">
                            <strong>Khách hàng:</strong> 
                            @(string.IsNullOrEmpty(donHang.CustomerName) ? "Khách vãng lai" : donHang.CustomerName)
                        </div>
                        <div class="mb-3">
                            <strong>Số điện thoại:</strong> 
                            @(string.IsNullOrEmpty(donHang.Phone) ? "Không có" : donHang.Phone)
                        </div>
                        <div class="mb-3">
                            <strong>Ngày đặt:</strong> 
                            @donHang.OrderDate?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="mb-3">
                            <strong>Phương thức thanh toán:</strong> 
                            @DisplayPaymentMethods()
                        </div>
                    </div>

                    <div class="col-md-6 text-md-end">
                        <h6 class="mb-3" style="color: #065f46; font-weight: 700; text-transform: uppercase;">&nbsp;</h6>

                        <div class="mb-3">
                            <strong>Trạng thái:</strong>
                            <span class="badge 
                                @(donHang.Status == "paid" ? "bg-success" : 
                                donHang.Status == "canceled" ? "bg-danger" : "bg-warning")"
                                style="padding: 0.5rem 1rem; border-radius: 50px; font-size: 0.9rem;">
                                @(donHang.Status == "paid" ? "Đã thanh toán" : 
                                donHang.Status == "canceled" ? "Đã hủy" : "Chờ thanh toán")
                            </span>
                        </div>

                        <div class="mb-1">
                            <strong>Nhân viên:</strong> 
                            @(string.IsNullOrEmpty(donHang.UserName) ? "Không xác định" : donHang.UserName)
                        </div>
                    </div>
                </div>

                <hr class="my-2" />

                <!-- DANH SÁCH SẢN PHẨM -->
                <h6 class="mb-3" style="color: #065f46; font-weight: 700; text-transform: uppercase;">
                    DANH SÁCH SẢN PHẨM
                </h6>

                <div style="height: 200px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 8px;">
                    <table class="table">
                        <thead class="table-light" style="position: sticky; top: 0; z-index: 5;">
                            <tr>
                                <th class="text-center">#</th>
                                <th>Tên sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (donHang.Items != null && donHang.Items.Any())
                            {
                                for (int i = 0; i < donHang.Items.Count; i++)
                                {
                                    var item = donHang.Items[i];
                                    <tr>
                                        <td class="text-center">@(i + 1)</td>
                                        <td>@item.Product?.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@string.Format("{0:N0} đ", item.Price)</td>
                                        <td class="text-end">@string.Format("{0:N0} đ", item.Subtotal)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        Không có sản phẩm
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer d-flex justify-content-between align-items-end"
                 style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">

                <div>
                    @if (donHang.DiscountAmount > 0)
                    {
                        <div class="mb-2 text-start">
                            <strong>
                                Mã giảm giá
                                @(donHang.Promotion != null ? $"({donHang.Promotion.PromoCode})" : ""):
                            </strong>
                            <span style="color: #ef4444; font-weight: 700;">
                                -@string.Format("{0:N0} đ", donHang.DiscountAmount)
                            </span>
                        </div>
                    }

                    <div class="text-start">
                        <strong style="font-size: 1.2rem; color: #065f46;">TỔNG CỘNG:</strong>
                        <span style="font-size: 1.4rem; color: #dc2626; font-weight: 700; margin-left: 10px;">
                            @string.Format("{0:N0} đ", donHang.TotalAmount)
                        </span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                            style="padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                        Đóng
                    </button>

                    @if (donHang.Status != "paid" && donHang.Status != "canceled")
                    {
                        <button type="button"
                                @onclick="() => TriggerCancelOrder(donHang.OrderId)"
                                class="btn btn-danger"
                                style="padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-times-circle me-2"></i> Hủy đơn
                        </button>

                        <button type="button"
                                @onclick="() => TriggerConfirmPayment(donHang.OrderId)"
                                class="btn btn-success"
                                style="padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                            <i class="fas fa-check-circle me-2"></i> Xác nhận TT
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Thêm tham số dotNetHelper vào hàm
    function confirmPaymentOrder(orderId, dotNetHelper) {

        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: "btn btn-success ms-2",
                cancelButton: "btn btn-danger me-2"
            },
            buttonsStyling: false
        });

        swalWithBootstrapButtons.fire({
            title: "Xác nhận thanh toán?",
            text: "Đơn hàng sẽ được chuyển sang trạng thái 'Đã thanh toán'!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Đồng ý!",
            cancelButtonText: "Hủy bỏ!",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {

                // --- THAY ĐỔI QUAN TRỌNG TẠI ĐÂY ---
                // Thay vì fetch, ta gọi ngược về hàm C# [JSInvokable]
                // Tên hàm 'ProcessPaymentConfirmed' phải khớp với tên trong C#
                dotNetHelper.invokeMethodAsync('ProcessPaymentConfirmed', orderId)
                    .then(() => {
                        // Sau khi C# chạy xong (Database đã update)
                        swalWithBootstrapButtons.fire({
                            title: "Thành công!",
                            text: "Đơn hàng đã được cập nhật.",
                            icon: "success"
                        });
                        // Không cần reload ở đây nếu C# đã xử lý Navigation.Refresh()
                        // hoặc nếu bạn muốn reload tại JS thì dùng location.reload();
                    })
                    .catch(err => {
                        console.error(err);
                        swalWithBootstrapButtons.fire("Lỗi!", "Có lỗi xảy ra phía server.", "error");
                    });

            } else if (result.dismiss === Swal.DismissReason.cancel) {
                swalWithBootstrapButtons.fire({
                    title: "Đã hủy",
                    text: "Không có thay đổi nào được thực hiện.",
                    icon: "error"
                });
            }
        });
    }
    function cancelOrderConfirm(orderId, dotNetHelper) {
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: "btn btn-danger ms-2", // Nút đồng ý màu đỏ
                cancelButton: "btn btn-secondary me-2" // Nút hủy màu xám
            },
            buttonsStyling: false
        });

        swalWithBootstrapButtons.fire({
            title: "Hủy đơn hàng này?",
            text: "Hành động này không thể hoàn tác! Đơn hàng sẽ bị hủy bỏ.",
            icon: "error", // Icon dấu X đỏ
            showCancelButton: true,
            confirmButtonText: "Vâng, hủy đơn!",
            cancelButtonText: "Không, quay lại!",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Gọi về C# hàm ProcessCancelOrder
                dotNetHelper.invokeMethodAsync('ProcessCancelOrder', orderId)
                    .then(() => {
                        swalWithBootstrapButtons.fire({
                            title: "Đã hủy!",
                            text: "Đơn hàng đã chuyển sang trạng thái hủy.",
                            icon: "success"
                        });
                    })
                    .catch(err => {
                        console.error(err);
                        swalWithBootstrapButtons.fire("Lỗi!", "Có lỗi xảy ra.", "error");
                    });
            }
        });
    }
</script>