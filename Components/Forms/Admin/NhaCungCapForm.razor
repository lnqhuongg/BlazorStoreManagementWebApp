@using BlazorStoreManagementWebApp.DTOs.Admin.NhaCungCap

<div class="modal fade" id="addSupplierModal" tabindex="-1" aria-labelledby="addSupplierLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">

            <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none;">
                <h1 class="modal-title fs-5" id="addSupplierLabel" style="color: white; font-weight: 700;">
                    <i class="fas fa-plus-circle" style="margin-right: 0.5rem;"></i>
                    Thêm mới Nhà cung cấp
                </h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body" style="padding: 2rem;">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Tên nhà cung cấp <span style="color: #ef4444;">*</span>
                        </label>
                        <input type="text" class="form-control" placeholder="Nhập tên công ty..."
                               style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem;">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Số điện thoại
                        </label>
                        <input type="text" class="form-control" placeholder="Nhập SĐT..."
                               style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem;">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Email
                        </label>
                        <input type="email" class="form-control" placeholder="example@mail.com"
                               style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem;">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Trạng thái <span style="color: #ef4444;">*</span>
                        </label>
                        <select class="form-select" style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem; color: #065f46;">
                            <option value="true" selected>Hoạt động</option>
                            <option value="false">Ngừng hợp tác</option>
                        </select>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Địa chỉ
                        </label>
                        <textarea class="form-control" rows="2" placeholder="Nhập địa chỉ cụ thể..."
                                  style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem;"></textarea>
                    </div>
                </div>
            </div>

            <div class="modal-footer" style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">
                <button type="button" class="btn" data-bs-dismiss="modal"
                        style="background-color: #e5e7eb; color: #374151; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                    Hủy
                </button>
                <button type="button" class="btn btn-add"
                        style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                    <i class="fas fa-check"></i> Lưu thông tin
                </button>
            </div>
        </div>
    </div>
</div>

