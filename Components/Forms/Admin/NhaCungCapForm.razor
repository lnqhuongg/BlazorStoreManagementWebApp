@using BlazorStoreManagementWebApp.DTOs.Admin.NhaCungCap

<div class="modal fade" id="addSupplierModal" tabindex="-1" aria-labelledby="SupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
            <EditForm Model="@supplierDTO" OnValidSubmit="@HandleSubmit">
                <!--Modal Header -->
                <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none;">
                    <h1 class="modal-title fs-5" id="SupplierModalLabel" style="color: white; font-weight: 700;">
                        <i class="fas fa-@(IsEditMode ? "edit" : "plus-circle")" style="margin-right: 0.5rem;"></i>
                        @(IsEditMode ? "Cập nhật Nhà cung cấp" : "Thêm mới Nhà cung cấp")
                    </h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body" style="padding: 2rem;">
                    <!-- Hàng 1: Tên NCC + Số điện thoại -->
                    <div class="row">
                        <!-- Tên NCC -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #065f46; margin-bottom: 0.75rem;">
                                Tên nhà cung cấp <span style="color: #ef4444;">*</span>
                            </label>
                            <InputText @bind-Value="supplierDTO.Name"
                                       class="form-control"
                                       placeholder="Nhập tên nhà cung cấp..."
                                       style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                            @if (!string.IsNullOrEmpty(NameError))
                            {
                                <span class="text-danger" style="font-size: 13px; font-weight: 500;">
                                    <i class="fas fa-exclamation-triangle" style="margin-right: 4px;"></i>
                                    @NameError
                                </span>
                            }
                        </div>

                        <!-- Số điện thoại -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #065f46; margin-bottom: 0.75rem;">
                                Số điện thoại <span style="color: #ef4444;">*</span>
                            </label>
                            <InputText @bind-Value="supplierDTO.Phone"
                                       class="form-control"
                                       placeholder="Nhập số điện thoại..."
                                       style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                            @if (!string.IsNullOrEmpty(PhoneError))
                            {
                                <span class="text-danger" style="font-size: 13px; font-weight: 500;">
                                    <i class="fas fa-exclamation-triangle" style="margin-right: 4px;"></i>
                                    @PhoneError
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Hàng 2: Email + Trạng thái -->
                    <div class="row">
                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #065f46; margin-bottom: 0.75rem;">
                                Email <span style="color: #ef4444;">*</span>
                            </label>
                            <InputText @bind-Value="supplierDTO.Email"
                                       class="form-control"
                                       placeholder="Nhập email (nếu có)..."
                                       style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                            @if (!string.IsNullOrEmpty(EmailError))
                            {
                                <span class="text-danger" style="font-size: 13px; font-weight: 500;">
                                    <i class="fas fa-exclamation-triangle" style="margin-right: 4px;"></i>
                                    @EmailError
                                </span>
                            }
                        </div>

                        <!-- Trạng thái -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #065f46; margin-bottom: 0.75rem;">
                                Trạng thái <span style="color: #ef4444;">*</span>
                            </label>
                            <InputSelect @bind-Value="supplierDTO.Status"
                                         class="form-select"
                                         style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;">
                                <option value="1">Hoạt động</option>
                                <option value="0">Ngưng hợp tác</option>
                            </InputSelect>
                        </div>
                    </div>

                    <!-- Hàng 3: Địa chỉ full width -->
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46; margin-bottom: 0.75rem;">
                            Địa chỉ <span style="color: #ef4444;">*</span>
                        </label>
                        <InputTextArea @bind-Value="supplierDTO.Address"
                                       class="form-control"
                                       placeholder="Nhập địa chỉ nhà cung cấp..."
                                       rows="3"
                                       style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                        @if (!string.IsNullOrEmpty(AddressError))
                        {
                            <span class="text-danger" style="font-size: 13px; font-weight: 500;">
                                <i class="fas fa-exclamation-triangle" style="margin-right: 4px;"></i>
                                @AddressError
                            </span>
                        }
                    </div>
                </div>


                <!-- Modal Footer -->
                <div class="modal-footer" style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">
                    <button type="button"
                            class="btn"
                            data-bs-dismiss="modal"
                            style="background-color: #e5e7eb; color: #374151; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        Hủy
                    </button>
                    <button type="submit"
                            class="btn btn-add"
                            style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        <i class="fas fa-check"></i>
                        @(IsEditMode ? "Cập nhật" : "Thêm mới")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

