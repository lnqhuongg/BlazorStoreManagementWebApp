@code {
    // Logic is in MaGiamGiaForm.razor.cs
}

<div class="modal fade" id="PromoModal" tabindex="-1" aria-labelledby="PromoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form @onsubmit="HandleSubmit">
                <div class="modal-header">
                    <h5 class="modal-title">@ModalTitle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Mã giảm giá</label>
                        <input class="form-control" @bind="promoDTO.PromoCode" />
                        @if (!string.IsNullOrEmpty(CodeErrorMessage))
                        {
                            <div class="text-danger">@CodeErrorMessage</div>
                        }
                    </div>
                    <div class="mb-3">
                        <label>Mô tả</label>
                        <input class="form-control" @bind="promoDTO.Description" />
                    </div>
                    <div class="mb-3">
                        <label>Loại giảm</label>
                        <select class="form-control" @bind="promoDTO.DiscountType">
                            <option value="percent">Phần trăm</option>
                            <option value="fixed">Số tiền</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Giá trị giảm</label>
                        <input type="number" class="form-control" @bind="promoDTO.DiscountValue" />
                    </div>
                    <div class="mb-3">
                        <label>Ngày bắt đầu</label>
                        <input type="date" class="form-control" @bind="promoDTO.StartDate" />
                    </div>
                    <div class="mb-3">
                        <label>Ngày kết thúc</label>
                        <input type="date" class="form-control" @bind="promoDTO.EndDate" />
                    </div>
                    <div class="mb-3">
                        <label>Giới hạn sử dụng</label>
                        <input type="number" class="form-control" @bind="promoDTO.UsageLimit" />
                    </div>
                    <div class="mb-3">
                        <label>Đã dùng</label>
                        <input type="number" class="form-control" @bind="promoDTO.UsedCount" />
                    </div>
                    <div class="mb-3">
                        <label>Trạng thái</label>
                        <select class="form-control" @bind="promoDTO.Status">
                            <option value="active">Hoạt động</option>
                            <option value="inactive">Tạm ngưng</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>
