<div class="modal fade" id="PromoModal" tabindex="-1" aria-labelledby="PromoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
            <EditForm Model="@promoDTO" OnValidSubmit="@HandleSubmit">
                <!-- Header -->
                <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none;">
                    <h1 class="modal-title fs-5" style="color: white; font-weight: 700;">
                        <i class="fas fa-@(IsEditMode ? "edit" : "plus-circle")" style="margin-right: 0.5rem;"></i>
                        @(IsEditMode ? "Chỉnh sửa mã giảm giá" : "Thêm mới mã giảm giá")
                    </h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <!-- Modal Body -->
                <div class="modal-body" style="padding: 2rem;">
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Mã giảm giá <span style="color: #ef4444;">*</span>
                        </label>
                        <InputText @bind-Value="promoDTO.PromoCode"
                                   class="form-control"
                                   placeholder="Nhập mã giảm giá..."
                                   style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                        @if (!string.IsNullOrEmpty(CodeErrorMessage))
                        {
                            <span class="text-danger" style="font-size: 13px; font-weight: 500;">
                                <i class="fas fa-exclamation-triangle" style="margin-right: 4px;"></i>
                                @CodeErrorMessage
                            </span>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Mô tả
                        </label>
                        <InputText @bind-Value="promoDTO.Description"
                                   class="form-control"
                                   placeholder="Nhập mô tả (không bắt buộc)..."
                                   style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Loại giảm <span style="color: #ef4444;">*</span>
                        </label>
                        <InputSelect @bind-Value="promoDTO.DiscountType"
                                     class="form-select"
                                     style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;">
                            <option value="percent">Phần trăm</option>
                            <option value="fixed">Số tiền</option>
                        </InputSelect>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Giá trị giảm <span style="color: #ef4444;">*</span>
                        </label>
                        <InputNumber @bind-Value="promoDTO.DiscountValue"
                                     class="form-control"
                                     placeholder="Nhập giá trị giảm..."
                                     style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Ngày bắt đầu <span style="color: #ef4444;">*</span>
                        </label>
                        <InputDate @bind-Value="promoDTO.StartDate"
                                   class="form-control"
                                   style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Ngày kết thúc <span style="color: #ef4444;">*</span>
                        </label>
                        <InputDate @bind-Value="promoDTO.EndDate"
                                   class="form-control"
                                   style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Giá trị đơn tối thiểu
                        </label>
                        <InputNumber @bind-Value="promoDTO.MinOrderAmount"
                                     class="form-control"
                                     placeholder="Nhập giá trị đơn tối thiểu..."
                                     style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Giới hạn sử dụng <span style="color: #ef4444;">*</span>
                        </label>
                        <InputNumber @bind-Value="promoDTO.UsageLimit"
                                     class="form-control"
                                     placeholder="Nhập giới hạn sử dụng..."
                                     style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Đã dùng
                        </label>
                        <InputNumber @bind-Value="promoDTO.UsedCount"
                                     class="form-control"
                                     placeholder="Số lần đã dùng..."
                                     style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #065f46;">
                            Trạng thái <span style="color: #ef4444;">*</span>
                        </label>
                        <InputSelect @bind-Value="promoDTO.Status"
                                     class="form-select"
                                     style="border: 2px solid #d1fae5; border-radius: 8px; padding: 0.75rem 1rem;">
                            <option value="active">Hoạt động</option>
                            <option value="inactive">Tạm ngưng</option>
                        </InputSelect>
                    </div>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer" style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">
                    <button type="button" class="btn" data-bs-dismiss="modal"
                            style="background-color: #e5e7eb; color: #374151; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-add"
                            style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600; cursor: pointer;">
                        <i class="fas fa-check"></i>
                        @(IsEditMode ? "Cập nhật" : "Thêm mới")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
