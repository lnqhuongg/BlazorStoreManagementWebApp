<div class="modal fade" id="PhieuNhapModal" tabindex="-1" aria-labelledby="phieuNhapLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" style="border: none; border-radius: 10px;">

            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, #f59e0b, #d97706); padding: 0.7rem 1rem;">
                <h1 class="modal-title fs-6" id="phieuNhapLabel" style="color: white; font-weight: 700;">
                    <i class="fas fa-file-import me-2"></i>
                    @ModalTitle
                </h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 1rem; font-size: 0.9rem;">

                <div class="row">

                    <!-- LEFT -->
                    <div class="col-md-4">
                        <h6 class="mb-2" style="color: #b45309; font-weight: 700;">Thông tin phiếu nhập</h6>

                        <div class="mb-2">
                            <label class="form-label small fw-semibold text-warning-emphasis">
                                Nhà cung cấp <span class="text-danger">*</span>
                            </label>
                            @if (IsAddMode)
                            {
                                <select class="form-select"
                                        style="border:2px solid #fef3c7; border-radius:8px; padding:0.7rem;"
                                        @onchange="SupplierChanged">
                                    <option value="0">-- Chọn nhà cung cấp --</option>
                                    @foreach (var s in suppliers)
                                    {
                                        <option value="@s.SupplierId">@s.Name</option>
                                    }
                                </select>
                                @if (Errors.ContainsKey("Supplier"))
                                {
                                    <div class="text-danger small">@Errors["Supplier"]</div>
                                }
                            }
                            else
                            {
                                <select disabled="@IsViewMode" class="form-select"
                                        style="border:2px solid #fef3c7; border-radius:8px; padding:0.7rem;"
                                        @onchange="SupplierChanged">
                                    <option value="@selectedSupplier.SupplierId">@selectedSupplier.Name</option
                                </select>
                            }


                        </div>
                    </div>

                    <!-- RIGHT -->
                    <div class="col-md-8">

                        <div class="row g-2">
                            @if (IsAddMode)
                            {
                                <h6 class="mb-2" style="color: #b45309; font-weight: 700;">
                                    Thêm sản phẩm
                                </h6>
                                <div class="col-md-5">
                                    <label class="form-label small fw-semibold text-warning-emphasis">Sản phẩm</label>
                                    <select class="form-select"
                                            style="border:2px solid #fef3c7; border-radius:8px; padding:0.7rem;"
                                            @bind="selectedProductId">
                                        <option value="0">-- Chọn sản phẩm --</option>
                                        @foreach (var p in products)
                                        {
                                            <option value="@p.ProductID">@p.ProductName</option>
                                        }
                                    </select>

                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small fw-semibold text-warning-emphasis">Số lượng</label>
                                    <input disabled="@IsViewMode" @bind="quantity" type="number" min="1" class="form-control small-input" style="height: 3em;" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label small fw-semibold text-warning-emphasis">Đơn giá</label>
                                    <input disabled="@IsViewMode" @bind="price" type="number" min="0" class="form-control small-input" style="height: 3em;" />
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <button class="btn" @onclick="() => AddProduct()"
                                            style="background: #d97706; color: white; font-weight: 600; border-radius: 8px; padding: 0.6rem 1.2rem; margin-bottom: 5px;">
                                        <i class="fas fa-plus me-1"></i>
                                    </button>
                                </div>

                            }



                        </div>
                        @if (Errors.ContainsKey("AddProduct"))
                        {
                            <div class="text-danger small">@Errors["AddProduct"]</div>
                        }

                        @if (Errors.ContainsKey("Quantity"))
                        {
                            <div class="text-danger small">@Errors["Quantity"]</div>
                        }

                        @if (Errors.ContainsKey("Price"))
                        {
                            <div class="text-danger small">@Errors["Price"]</div>
                        }


                    </div>
                </div>

                <hr class="my-3" />

                <!-- TABLE -->
                <h6 class="fw-bold text-warning-emphasis mb-2">Danh sách sản phẩm</h6>
                @if (Errors.ContainsKey("Details"))
                {
                    <div class="text-danger small">@Errors["Details"]</div>
                }


                <div style="height: 300px; overflow-y: auto;">
                    <table class="table table-striped table-bordered" style="font-size: 0.85rem;">

                        <colgroup>
                            <col style="width: 45%;">
                            <col style="width: 15%; text-align: center;">
                            <col style="width: 20%; text-align: right;">
                            <col style="width: 20%; text-align: right;">
                            @if (IsAddMode)
                            {
                                <col style="width: 50px;">
                            }
                        </colgroup>

                        <thead style="position: sticky; top: 0; background: #fef3c7; z-index: 5;">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>SL</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                                @if (IsAddMode)
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in details)
                            {
                                <tr>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.ToString("N0")</td>
                                    <td>@(item.Quantity * item.Price)</td>

                                    @if (IsAddMode)
                                    {
                                        <td>
                                            <button class="btn btn-danger btn-sm p-1"
                                                    @onclick="() => RemoveImportDetail(item.Product.ProductID)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>

            <!-- Footer -->
            <div class="modal-footer d-flex justify-content-between align-items-center"
                 style="padding: 0.9rem; font-size: 0.9rem;">

                <!-- Total -->
                <div style="font-weight: 700; color: #b45309;">
                    Tổng tiền:
                    <span style="color: #d97706;">@TotalAmount VND</span>
                </div>

                <div>
                    @if(IsAddMode)
                    {
                        <button type="button" class="btn btn-light small-btn" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn small-btn-save" @onclick="() => Save()">
                            <i class="fas fa-check"></i> Lưu
                        </button>
                    }
                    
                </div>
            </div>

        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div class="toast @(ShowToast ? "show" : "") bg-success" role="alert">
        <div class="toast-header">
            <strong class="me-auto">Thông báo</strong>
            <button type="button" class="btn-close" @onclick="HideToast"></button>
        </div>
        <div class="toast-body text-white">
            @ToastMessage
        </div>
    </div>
</div>