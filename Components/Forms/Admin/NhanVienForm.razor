@using BlazorStoreManagementWebApp.DTOs.Admin.NhanVien

<div class="modal fade" id="NhanVienModal" tabindex="-1" aria-labelledby="NhanVienModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
            <EditForm Model="@Model" OnValidSubmit="@HandleSubmit">
                <!-- Header -->
                <div class="modal-header" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); border: none;">
                    <h1 class="modal-title fs-5" id="NhanVienModalLabel" style="color: white; font-weight: 700;">
                        <i class="fas fa-@(IsEditMode ? "edit" : "plus-circle")" style="margin-right: 0.5rem;"></i>
                        @(IsEditMode ? "Cập nhật nhân viên" : "Thêm mới nhân viên")
                    </h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Body -->
                <div class="modal-body" style="padding: 2rem;">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #1e40af;">
                                Tên đăng nhập <span style="color: #ef4444;">*</span>
                            </label>
                            <InputText @bind-Value="Model.Username" class="form-control" placeholder="Nhập tên đăng nhập..." style="border: 2px solid #dbeafe; border-radius: 8px; padding: 0.75rem 1rem;" />
                            @if (!string.IsNullOrEmpty(UsernameError))
                            {
                                <div class="text-danger mt-1" style="font-size: 0.875rem;">
                                    @UsernameError
                                </div>
                            }
                        </div>

                        @if (!IsEditMode)
                        {
                            <div class="col-md-6 mb-3">
                                <label class="form-label" style="font-weight: 600; color: #1e40af;">
                                    Mật khẩu <span style="color: #ef4444;">*</span>
                                </label>
                                <InputText @bind-Value="Model.Password" type="password" class="form-control" placeholder="Nhập mật khẩu..." style="border: 2px solid #dbeafe; border-radius: 8px; padding: 0.75rem 1rem;" />
                                @if (!string.IsNullOrEmpty(PasswordError))
                                {
                                    <div class="text-danger mt-1" style="font-size: 0.875rem;">
                                        @PasswordError
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #1e40af;">
                                Họ và tên <span style="color: #ef4444;">*</span>
                            </label>
                            <InputText @bind-Value="Model.FullName" class="form-control" placeholder="Nhập họ và tên..." style="border: 2px solid #dbeafe; border-radius: 8px; padding: 0.75rem 1rem;" />
                            @if (!string.IsNullOrEmpty(FullNameError))
                            {
                                <div class="text-danger mt-1" style="font-size: 0.875rem;">
                                    @FullNameError
                                </div>
                            }
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label" style="font-weight: 600; color: #1e40af;">
                                Chức vụ <span style="color: #ef4444;">*</span>
                            </label>
                            <InputSelect @bind-Value="Model.Role" class="form-select" style="border: 2px solid #dbeafe; border-radius: 8px; padding: 0.75rem 1rem;">
                                <option value="">-- Chọn chức vụ --</option>
                                <option value="staff">Nhân viên</option>
                                <option value="admin">Quản trị viên</option>
                            </InputSelect>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" style="font-weight: 600; color: #1e40af;">
                            Trạng thái <span style="color: #ef4444;">*</span>
                        </label>
                        <InputSelect @bind-Value="Model.Status" class="form-select" style="border: 2px solid #dbeafe; border-radius: 8px; padding: 0.75rem 1rem;">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Tạm ngưng</option>
                        </InputSelect>
                    </div>

                    @if (!string.IsNullOrEmpty(GeneralError))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @GeneralError
                        </div>
                    }
                </div>

                <!-- Footer -->
                <div class="modal-footer" style="border-top: 1px solid #e5e7eb; padding: 1.5rem;">
                    <button type="button" class="btn" data-bs-dismiss="modal" style="background-color: #e5e7eb; color: #374151; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-add" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white; padding: 0.75rem 1.5rem; border-radius: 8px; font-weight: 600;">
                        <i class="fas fa-check"></i>
                        @(IsEditMode ? "Cập nhật" : "Thêm mới")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>